<section class = 'flex column alignItems'>
    <h3>Welcome {{name}}</h3>
    <p>Here are your characters</p>

{{#if character}}
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Status</th>
                <th><!--Delete/Like Button--></th>
            </tr>
        </thead>
        <tbody>
{{#each character}}
        <tr>
            <td><a class = 'flex column alignItems justifyContent' href= '/characters/{{_id}}'>{{name}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class = 'dash-status'>{{status}}</span></td>

            <td class = 'flex'>
                <a href="/characters/edit/{{_id}}"><button id = 'edit'><i class="fa-solid fa-pen-to-square"></i></button>
            </a>

            <form action = '/characters/{{_id}}' method='POST'>
                <input type="hidden" name="_method" value="DELETE">
                <button id= 'delete'><i class="fas fa-trash"></i></button>
            </form>
            </td>
        </tr>
{{/each}}
    </tbody>
</table>

{{else}}
    <p>You have not created any characters</p>
{{/if}}
</section>